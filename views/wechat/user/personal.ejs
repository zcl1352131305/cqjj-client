            }
        }*/


        init();
    });

    function init(){
        var userInfo = getGlobalAttribute("userInfo_cqjj");
        $("#headImg").attr("src",userInfo.headImgUrl)
        $("#nickName").html(userInfo.nickName);
        $("#collectFn").attr("gref","/wechat/user/collection/furniture/list")
    }



</script>
</html>