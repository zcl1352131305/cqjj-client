<script src="https://cdn.bootcss.com/jquery-weui/1.2.0/js/swiper.min.js"></script>
<script type="text/javascript" src="/static/javascripts/template.js"></script>
<script>
    $(document).ready(function () {

        var userInfo = getGlobalAttribute("userInfo_cqjj");
        if(userInfo == null || JSON.stringify(userInfo) == '{}'){
            userInfo = '<%- (typeof(userInfo) == 'undefined' || userInfo == null)?'':JSON.stringify(userInfo)%>';
            if(!isEmpty(userInfo) && userInfo != '{}'){
                setGlobalAttribute("userInfo_cqjj",JSON.parse(userInfo));
            }
        }
        init();
        getSwiperInfo();
    });

    function init(){
        var userInfo = getGlobalAttribute("userInfo_cqjj");
        $("#headImg").attr("src",userInfo.headImgUrl);
        $("#headImg").on("click",function () {
            location.href = '/wechat/user/home/personal'
        })
    }


    $("#searchInput").on('keypress',function(e) {
        var keycode = e.keyCode;
        var searchName = $(this).val();
        if(keycode=='13') {
            e.preventDefault();
            location.href = "/wechat/user/furniture/init?searchTitle="+searchName;
        }
    });

    //轮播图
    function getSwiperInfo(){
        noAuthBaseAjax({
            url:"/wechat/user/home/specialInfo",
            type:"get",
            data:{
                location:'wx-main-swiper',
            },
            success:function(data){
                //alert(JSON.stringify(data))
                var html = template("swiperTemplate",data);
                $(".swiper-wrapper").html(html);
                $(".swiper-container").swiper({
                    autoplay:5000,
                    loop:true
                })
            },
        })
    }



</script>
